#include <stdio.h>

void fortuneCookie(char msg[])
{
    printf("Message reads: %s\n", msg);
    printf("msg occupies %i bystes\n", sizeof(msg));
}

int main()
{
    char quote[] = "Cookies make you fat";
    fortuneCookie(quote);

    printf("The quote string is stored at: %p\n", quote);

    return 0;
}
